---
import Layout from '../layouts/Layout.astro';
import questionsData from '../data/questions.json';

const title = "Préparation Civique - Examen de Citoyenneté Française";
---

<Layout title={title}>
	<header class="header">
		<div class="container">
			<div class="logo">
				<div class="flag">
					<span class="blue"></span>
					<span class="white"></span>
					<span class="red"></span>
				</div>
				<h1>Préparation Civique</h1>
			</div>
			<p class="subtitle">Réussir votre entretien de naturalisation</p>
		</div>
	</header>

	<div class="layout-wrapper container">
		<aside class="sidebar">
			<nav class="sticky-nav">
				<h3>Sommaire</h3>
				<ul>
					{questionsData.map((category, index) => (
						<li>
							<a href={`#category-${index}`}>{category.category}</a>
						</li>
					))}
				</ul>
			</nav>
		</aside>

		<main class="content">
			{questionsData.map((category, catIndex) => (
				<section id={`category-${catIndex}`} class="category-section">
					<h2 class="category-title">{category.category}</h2>
					<ul class="questions-list">
						{category.questions.map((item) => (
							<li>
								<a href={`question/${item.slug}`} class="question-link">
									{item.q}
								</a>
							</li>
						))}
					</ul>
				</section>
			))}
		</main>
	</div>

	<footer class="footer">
		<div class="container">
			<p>&copy; 2026 Préparation Civique - Ressources pour la Citoyenneté Française</p>
		</div>
	</footer>
</Layout>

<style>
	.header {
		background: var(--blue);
		color: white;
		padding: 2rem 0;
		border-bottom: 4px solid var(--red);
	}
	.logo {
		display: flex;
		align-items: center;
		gap: 1.5rem;
	}
	.header h1 {
		color: white;
		margin: 0;
		font-size: 2rem;
		font-weight: 800;
		letter-spacing: -0.02em;
	}
	.subtitle {
		margin: 0.5rem 0 0;
		font-size: 1.1rem;
		opacity: 0.9;
	}
	.flag {
		display: flex;
		width: 45px;
		height: 30px;
		border-radius: 2px;
		overflow: hidden;
	}
	.flag span { flex: 1; height: 100%; }
	.flag .blue { background: #002395; }
	.flag .white { background: #ffffff; }
	.flag .red { background: #ed2939; }

	.layout-wrapper {
		display: grid;
		grid-template-columns: 280px 1fr;
		gap: 3rem;
		margin-top: 3rem;
	}

	.sticky-nav {
		position: sticky;
		top: 2rem;
		background: white;
		padding: 1.5rem;
		border-radius: 8px;
		border: 1px solid var(--border-color);
	}
	.sticky-nav h3 {
		font-size: 1rem;
		text-transform: uppercase;
		letter-spacing: 0.05em;
		color: #718096;
		margin-bottom: 1rem;
		padding-bottom: 0.5rem;
		border-bottom: 1px solid var(--light-gray);
	}
	.sticky-nav ul {
		list-style: none;
		padding: 0;
		margin: 0;
	}
	.sticky-nav li { margin-bottom: 0.75rem; }
	.sticky-nav a {
		text-decoration: none;
		color: var(--text-color);
		font-size: 0.95rem;
		transition: color 0.2s;
		display: block;
		line-height: 1.4;
	}
	.sticky-nav a:hover { color: var(--accent-blue); }

	.category-section { margin-bottom: 4rem; }
	.category-title {
		font-size: 1.5rem;
		color: var(--blue);
		margin-bottom: 1.5rem;
		padding-bottom: 0.75rem;
		border-bottom: 2px solid var(--light-gray);
	}

	.questions-list {
		list-style: none;
		padding: 0;
	}
	.questions-list li {
		padding: 0.75rem 0;
		border-bottom: 1px solid #edf2f7;
	}
	.question-link {
		text-decoration: none;
		color: #2d3748;
		font-size: 1.1rem;
		font-weight: 500;
		transition: all 0.2s;
		display: block;
	}
	.question-link:hover {
		color: var(--accent-blue);
		transform: translateX(5px);
	}

	.footer {
		text-align: center;
		padding: 4rem 0;
		color: #a0aec0;
		font-size: 0.9rem;
	}

	@media (max-width: 900px) {
		.layout-wrapper { grid-template-columns: 1fr; }
		.sidebar { display: none; }
	}
</style>
